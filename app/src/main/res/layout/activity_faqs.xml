<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDE7ED"
    tools:context=".more.FAQsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="FAQ's"
        app:titleTextColor="@android:color/holo_blue_dark"
        app:navigationIcon="@drawable/ic_back_arrow"
        android:background="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                app:cardCornerRadius="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="1. Failed to join contest"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="For this problem, there is mainly three reasons-
                        \n \n(i) If you have already joined the same contest.
                        \n\n(ii) If contest is full then you can not join the contest.
                        \n\n(iii) check your username is submitted or not (i.e. if you want to join any type of contest of PUBG, then you must submitted your pubg username.)
                        \nif you have not submit your username then first go to update activity and submit your same username.
                        \n\n(iv) If you faces some other type of problem, you should contact our team members."
                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:textColor="@android:color/black"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                app:cardCornerRadius="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="2. I can't join custom room?"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="(i)  If contest type is free (i.e Entry fee is Rs 0) then may be custom room is full.
                        \nNOTE - First come First win.
                        \n\n(ii)If contest type is paid, then you have to wait for some time and try again.
                        \nFor more information you also contact our members."
                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:textColor="@android:color/black"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                app:cardCornerRadius="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="3. Winner ammount is not recieved?"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="If you have won the matches and your money is not added to your Gaming Tournament balance, then wait for 24 hours.
                        \nYour money is safe and it will be automatically added to your balance.
                        \nYou can easily withdraw your money once you reaches minimumn Rs 50.
                        \nFor other information you can also contact our members."
                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>




</RelativeLayout>